@model IEnumerable<ViewModels.ProjectDefine.ProjectViewModel.ListProjectViewModel>
@{ string tableName = "Project";}

<div class="col-lg-12">
    <input type="hidden" id="sort-@(tableName)" value="Id descending" />

    <!------------- Start Table ----------------------->
    <div class="row">
        <div class="col-lg-12 content-grid">
            <form id="frm-tbl-@(tableName)">
                <table class="tbl-grid" id="tbl-@(tableName)" style="min-width: 1100px;">
                    <thead>
                        <tr>
                            <th style="width:80px;"><a onmousedown="Sort('Id', '@(tableName)')">ردیف <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ProjectTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.ProjectTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('StateTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.StateTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('CityTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.CityTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('StartFinantialYearTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.StartFinantialYearTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ForecastEndFinantialYearTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.ForecastEndFinantialYearTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('Area', '@(tableName)')">@Html.DisplayNameFor(model => model.Area) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th data-th='ویرایش/حذف'>ویرایش/حذف</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td data-th='ردیف'>
                                <input type="text" class="form-control txtbox" name="Id">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProjectTitle)">
                                <input type="text" class="form-control txtbox" name="ProjectTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.StateTitle)">
                                <input type="text" class="form-control txtbox" name="StateTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.CityTitle)">
                                <input type="text" class="form-control txtbox" name="CityTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.StartFinantialYearTitle)">
                                <input type="text" class="form-control txtbox" name="StartFinantialYearTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ForecastEndFinantialYearTitle)">
                                <input type="text" class="form-control txtbox" name="ForecastEndFinantialYearTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.Area)">
                                <input type="text" class="form-control txtbox" name="Area">
                            </td>

                            <td data-th='ویرایش/حذف'></td>
                        </tr>
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="8">
                            </td>
                        </tr>
                    </tfoot>

                </table>
            </form>
        </div>
    </div>
</div>

<!------------- End Table ----------------------->