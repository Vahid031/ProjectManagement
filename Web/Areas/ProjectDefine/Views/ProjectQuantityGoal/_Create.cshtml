@model ViewModels.ProjectDefine.ProjectQuantityGoalViewModel.CreateProjectQuantityGoalViewModel

<form id="frm-ProjectQuantityGoal" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    @Html.HiddenFor(model => model.ProjectQuantityGoal.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.ProjectQuantityGoal.Id, @id = "ProjectQuantityGoalId" })
    
    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectQuantityGoal.QuantityGoalType, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectQuantityGoal.QuantityGoalType, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectQuantityGoal.QuantityGoalType, new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectQuantityGoal.UnitId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectQuantityGoal.UnitId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.ProjectQuantityGoal.UnitId, new SelectList(Model.Units, "Id", "Title"), new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectQuantityGoal.Amount, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectQuantityGoal.Amount, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectQuantityGoal.Amount, new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectQuantityGoal.UnitPrice, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectQuantityGoal.UnitPrice, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectQuantityGoal.UnitPrice, new { @class = "form-control txtbox numeric input-price", data_val = "true", data_val_required = "الزامی است" })
    </div>


    <div class="clear"></div>
    <div class="form-group col-lg-4 col-md-6">
        <button type="submit" id="btnSaveProjectQuantityGoal" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
        <button type="button" id="btnNewProjectQuantityGoal" class="btn btn-info btnNew"><span class="glyphicon glyphicon-file" style="float:right;"></span>جدید</button>
    </div>
</form>
