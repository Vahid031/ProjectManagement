@model ViewModels.ProjectDefine.ProjectFundingViewModel.CreateProjectFundingViewModel

<form id="frm-ProjectFunding" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    @Html.HiddenFor(model => model.ProjectFunding.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.ProjectFunding.Id, @id = "ProjectFundingId" })
    @Html.HiddenFor(model => model.Files, new { @id = "images-ProjectFunding" })
     
    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectFunding.FinantialYearId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectFunding.FinantialYearId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.ProjectFunding.FinantialYearId, new SelectList(Model.FinantialYears, "Id", "Title"), new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectFunding.ProjectPlanId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectFunding.ProjectPlanId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.ProjectFunding.ProjectPlanId, new SelectList(Model.ProjectPlans, "Id", "Title"), new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ResourceId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ResourceId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.ResourceId, new SelectList(Model.Resources, "Id", "Title"), new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectFunding.ResourceTypeId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectFunding.ResourceTypeId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.ProjectFunding.ResourceTypeId, new SelectList(Model.ResourceTypes, "Id", "Title"), new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectFunding.Price, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectFunding.Price, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectFunding.Price, new { @class = "form-control txtbox numeric input-price", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6" style="text-align:center">
        <br />
        <button type="button" id="btnShowProjectFundingFiles" class="btn btn-warning btn-uploader"><span class="glyphicon glyphicon-ok" style="float:right;"></span>افزودن فایل های پیوستی</button>
    </div>

    <div class="clear"></div>
    <div class="form-group col-lg-4 col-md-6">
        <button type="submit" id="btnSaveProjectFunding" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
        <button type="button" id="btnNewProjectFunding" class="btn btn-info btnNew"><span class="glyphicon glyphicon-file" style="float:right;"></span>جدید</button>
    </div>
</form>

