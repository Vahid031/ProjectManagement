@model IEnumerable<ViewModels.ProjectDefine.ProjectFundingViewModel.ListProjectFundingViewModel>
@{ string tableName = "ProjectFunding";}

<div class="col-lg-12">
    <input type="hidden" id="sort-@(tableName)" value="ProjectFunding.Id descending" />

    <!------------- Start Table ----------------------->
    <div class="row">
        <div class="col-lg-12 content-grid">
            <form id="frm-tbl-@(tableName)">
                <table class="tbl-grid" id="tbl-@(tableName)">
                    <thead>
                        <tr>
                            <th style="width:80px;"><a onmousedown="Sort('ProjectFunding.Id', '@(tableName)')">ردیف <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('FinantialYear.Title', '@(tableName)')">@Html.DisplayNameFor(model => model.FinantialYear.Title) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('Resource.Title', '@(tableName)')">@Html.DisplayNameFor(model => model.Resource.Title) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ResourceType.Title', '@(tableName)')">@Html.DisplayNameFor(model => model.ResourceType.Title) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ProjectFunding.Price', '@(tableName)')">@Html.DisplayNameFor(model => model.ProjectFunding.Price) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th data-th='ویرایش/حذف'>ویرایش/حذف</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td data-th='ردیف'>
                                <input type="text" class="form-control txtbox" name="ProjectFunding.Id">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.FinantialYear.Title)">
                                <input type="text" class="form-control txtbox" name="Program.FinantialYear.Title">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.Resource.Title)">
                                <input type="text" class="form-control txtbox" name="Resource.Title">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ResourceType.Title)">
                                <input type="text" class="form-control txtbox" name="ResourceType.Title">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProjectFunding.Price)">
                                <input type="text" class="form-control txtbox" name="ProjectFunding.Price">
                            </td>

                            <td data-th='ویرایش/حذف'></td>
                        </tr>
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="6">
                            </td>
                        </tr>
                    </tfoot>

                </table>
            </form>
        </div>
    </div>
</div>

<!------------- End Table ----------------------->