@model IEnumerable<ViewModels.ProjectDefine.ProjectAverageViewModel.ListProjectAverageViewModel>
@{ string tableName = "ProjectAverage";}

<div class="col-lg-12">
    <input type="hidden" id="sort-@(tableName)" value="ProjectAverage.Id descending" />

    <!------------- Start Table ----------------------->
    <div class="row">
        <div class="col-lg-12 content-grid">
            <form id="frm-tbl-@(tableName)">
                <table class="tbl-grid" id="tbl-@(tableName)">
                    <thead>
                        <tr>
                            <th style="width:80px;"><a onmousedown="Sort('ProjectAverage.Id', '@(tableName)')">ردیف <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('FinantialYear.Title', '@(tableName)')">@Html.DisplayNameFor(model => model.FinantialYear.Title) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ProjectAverage.Average', '@(tableName)')">@Html.DisplayNameFor(model => model.ProjectAverage.Average) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th data-th='ویرایش/حذف'>ویرایش/حذف</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td data-th='ردیف'>
                                <input type="text" class="form-control txtbox" name="ProjectAverage.Id">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.FinantialYear.Title)">
                                <input type="text" class="form-control txtbox" name="Program.FinantialYear.Title">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProjectAverage.Average)">
                                <input type="text" class="form-control txtbox" name="ProjectAverage.Average">
                            </td>

                            <td data-th='ویرایش/حذف'></td>
                        </tr>
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="4"></td>
                        </tr>
                    </tfoot>

                </table>
            </form>
        </div>
    </div>
</div>

<!------------- End Table ----------------------->