@model IEnumerable<ViewModels.ProjectDefine.ProgramPlanViewModel.ListProgramPlanViewModel>
@{ string tableName = "ProgramPlan";}

<div class="col-lg-12">
    <input type="hidden" id="sort-@(tableName)" value="Id descending" />

    <!------------- Start Table ----------------------->
    <div class="row">
        <div class="col-lg-12 content-grid">
            <form id="frm-tbl-@(tableName)">
                <table class="tbl-grid" id="tbl-@(tableName)" style="min-width: 1900px;">
                    <thead>
                        <tr>
                            <th style="width:80px;"><a onmousedown="Sort('Id', '@(tableName)')">ردیف <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ProgramTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.ProgramTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('PlanTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.PlanTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('PlanCode', '@(tableName)')">@Html.DisplayNameFor(model => model.PlanCode) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('PlanTypeTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.PlanTypeTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('TotalProjects', '@(tableName)')">@Html.DisplayNameFor(model => model.TotalProjects) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('FirstProjectFinantialYearTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.FirstProjectFinantialYearTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ForecastLastProjectFinantialYearTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.ForecastLastProjectFinantialYearTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ExecutionSetTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.ExecutionSetTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('BeneficiarySetTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.BeneficiarySetTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th data-th='ویرایش/حذف'>ویرایش/حذف</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td data-th='ردیف'>
                                <input type="text" class="form-control txtbox" name="Id">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProgramTitle)">
                                <input type="text" class="form-control txtbox" name="Program.Title">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.PlanTitle)">
                                <input type="text" class="form-control txtbox" name="PlanTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.PlanCode)">
                                <input type="text" class="form-control txtbox" name="PlanCode">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.PlanTypeTitle)">
                                <input type="text" class="form-control txtbox" name="PlanTypeTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.TotalProjects)">
                                <input type="text" class="form-control txtbox" name="TotalProjects">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.FirstProjectFinantialYearTitle)">
                                <input type="text" class="form-control txtbox" name="FirstProjectFinantialYearTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ForecastLastProjectFinantialYearTitle)">
                                <input type="text" class="form-control txtbox" name="ForecastLastProjectFinantialYearTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ExecutionSetTitle)">
                                <input type="text" class="form-control txtbox" name="ExecutionSetTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.BeneficiarySetTitle)">
                                <input type="text" class="form-control txtbox" name="BeneficiarySetTitle">
                            </td>

                            <td data-th='ویرایش/حذف'></td>
                        </tr>
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="11">
                            </td>
                        </tr>
                    </tfoot>

                </table>
            </form>
        </div>
    </div>
</div>

<!------------- End Table ----------------------->