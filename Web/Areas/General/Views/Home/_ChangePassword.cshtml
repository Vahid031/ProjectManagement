@model ViewModels.General.MemberViewModel.CreateMemberViewModel

<form id="frm-ChangeMemberPassword" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    <div class="row">
        <div class="col-lg-12">
            @Html.HiddenFor(model => model.Member.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.Member.Id, @id = "Id" })

            <div class="form-group col-lg-4 col-md-6">
                @Html.LabelFor(model => model.Member.UserName, new { @class = "label-txt" })
                @Html.ValidationMessageFor(model => model.Member.UserName, String.Empty, new { @class = "label-validation" })
                @Html.TextBoxFor(model => model.Member.UserName, new { @class = "form-control txtbox", @readonly="readonly" })
            </div>

            <div class="form-group col-lg-4 col-md-6">
                @Html.LabelFor(model => model.OldPassword, new { @class = "label-txt" })
                @Html.ValidationMessageFor(model => model.OldPassword, String.Empty, new { @class = "label-validation" })
                @Html.TextBoxFor(model => model.OldPassword, new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
            </div>

            <div class="form-group col-lg-4 col-md-6">
                @Html.LabelFor(model => model.Member.Password, new { @class = "label-txt" })
                @Html.ValidationMessageFor(model => model.Member.Password, String.Empty, new { @class = "label-validation" })
                @Html.TextBoxFor(model => model.Member.Password, new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
            </div>

            <div class="form-group col-lg-4 col-md-6">
                @Html.LabelFor(model => model.Member.PasswordCampare, new { @class = "label-txt" })
                @Html.ValidationMessageFor(model => model.Member.PasswordCampare, String.Empty, new { @class = "label-validation" })
                @Html.TextBoxFor(model => model.Member.PasswordCampare, new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
            </div>
        </div>
    </div>
    <div class="clear"></div>
    <div class="form-group col-lg-4 col-md-6">
        <button type="submit" id="btnSave" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
    </div>
</form>
