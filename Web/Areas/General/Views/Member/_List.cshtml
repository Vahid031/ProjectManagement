@model IEnumerable<ViewModels.General.MemberViewModel.ListMemberViewModel>
@{ string tableName = "Member";}

<div class="col-lg-12">
    <input type="hidden" id="sort-@(tableName)" value="@(tableName).Id descending" />

    <!------------- Start Table ----------------------->

        <div class="col-lg-12 content-grid">
            <form id="frm-tbl-@(tableName)">
                <table class="tbl-grid" id="tbl-@(tableName)" style="min-width:1300px;">
                    <thead>
                        <tr>
                            <th style="width:80px;"><a onmousedown="Sort('Member.Id', '@(tableName)')">ردیف <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('Role.Title', '@(tableName)')">@Html.DisplayNameFor(model => model.Role.Title) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('Member.FirstName', '@(tableName)')">@Html.DisplayNameFor(model => model.Member.FirstName) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('Member.LastName', '@(tableName)')">@Html.DisplayNameFor(model => model.Member.LastName) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('Member.UserName', '@(tableName)')">@Html.DisplayNameFor(model => model.Member.UserName) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('Member.NationalCode', '@(tableName)')">@Html.DisplayNameFor(model => model.Member.NationalCode) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('Member.IsActive', '@(tableName)')">@Html.DisplayNameFor(model => model.Member.IsActive) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th data-th='ویرایش/حذف'>ویرایش/حذف</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td data-th='ردیف'>
                                <input type="text" class="form-control txtbox" name="Member.Id">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.Role.Title)">
                                <input type="text" class="form-control txtbox" name="Role.Title">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.Member.FirstName)">
                                <input type="text" class="form-control txtbox" name="Member.FirstName">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.Member.LastName)">
                                <input type="text" class="form-control txtbox" name="Member.LastName">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.Member.UserName)">
                                <input type="text" class="form-control txtbox" name="Member.UserName">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.Member.NationalCode)">
                                <input type="text" class="form-control txtbox" name="Member.NationalCode">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.Member.IsActive)">
                                <select name="Member.IsActive">
                                    <option value="">نمایش همه</option>
                                    <option value="true">فعال</option>
                                    <option value="false">غیر فعال</option>
                                </select>
                            </td>

                            <td data-th='ویرایش/حذف'></td>
                        </tr>
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="8">
                            </td>
                        </tr>
                    </tfoot>

                </table>
            </form>
        </div>

</div>

<!------------- End Table ----------------------->