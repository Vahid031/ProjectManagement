@model ViewModels.General.RoleViewModel.CreateRoleViewModel

<form id="frm-Role" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }



    <div class="form-group col-lg-12">
        <div class="tree-parent"><span>نام والد</span> : <span style="color:#db4a4a;" id="tree-parent-text">هیچ والدی انتخاب نشده است</span> <span class=""></span></div>
    </div>

    <div class="clear"></div>
    <div class="form-group col-lg-6">
        <button type="submit" id="btnSave" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
    </div>
</form>


<script>
    GetTreeParent();
</script>


