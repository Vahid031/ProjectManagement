@model ViewModels.ProjectDefine.ProjectViewModel.CreateProjectViewModel
<link rel="stylesheet" href="~/Content/Reporting/css/core.css">
<link rel="stylesheet" href="~/Content/Reporting/css/style.css">
<form id="FormContainer-Project" class="operationform" method="post">

    @if (ViewBag.error != null)
    {
        <div class="col-lg-12">
            <div id="ErrorAlert" class="alert alert-danger" role="alert">
                <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                <span>@ViewBag.error</span>
            </div>
        </div>

        <script>
            $('#ErrorAlert').show().delay(4000).slideUp(300);
        </script>
    }


    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.Project.StateId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.Project.StateId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.Project.StateId, new SelectList(Model.States, "Id", "Title"), new { @Id = "State", @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>
    <div class="form-group col-lg-4 col-md-6">
        @Html.Label("نحوه واگذاری", new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.AssignmentType, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.AssignmentType, new SelectList(Model.AssignmentType, "Id", "Title"), new { @Id = "AT", @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>
    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.Project.ProjectTypeId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.Project.ProjectTypeId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.Project.ProjectTypeId, new SelectList(Model.ProjectTypes, "Id", "Title"), new { @Id = "pType", @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>
    <div class="form-group col-lg-4 col-md-6">
        @Html.Label("محل تامین اعتبار", new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.CreditProvidePlaces, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.CreditProvidePlaces, new SelectList(Model.CreditProvidePlaces, "Id", "Title"), new { @Id = "CP", @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>
    <div class="clear"></div>
    <div class="form-group col-lg-4 col-md-6">
        <button type="button" id="btnSave" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>گزارش</button>
    </div>
</form>
<div id="chart">
    @Html.Partial("_C5Chart")
</div>


