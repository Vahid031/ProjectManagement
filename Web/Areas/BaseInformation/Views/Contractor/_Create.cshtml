        @Html.DropDownListFor(model => model.Contractor.ContractorType, new List<SelectListItem> {
            new SelectListItem{ Text="حقیقی", Value="حقیقی"},
            new SelectListItem{ Text="حقوقی", Value="حقوقی"}
        }, new { @class = "form-control txtbox" })
    </div>

