@model ViewModels.BaseInformation.ContractorViewModel.CreateContractorViewModel

<form id="frm-Contractor" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    @Html.HiddenFor(model => model.Contractor.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.Contractor.Id, @id = "Id" })


