@model IEnumerable<ViewModels.BaseInformation.ProgramViewModel.ListProgramViewModel>
@{ string tableName = "Program";}

<div class="col-lg-12">
    <input type="hidden" id="sort-@(tableName)" value="@(tableName).Id descending" />

    <!------------- Start Table ----------------------->
    <div class="row">
        <div class="col-lg-12 content-grid">
            <form id="frm-tbl-@(tableName)">
                <table class="tbl-grid" id="tbl-@(tableName)">
                    <thead>
                        <tr>
                            <th style="width:80px;"><a onmousedown="Sort('Program.Id', '@(tableName)')">ردیف <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('Program.Title', '@(tableName)')">@Html.DisplayNameFor(model => model.Program.Title) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('Program.FromYear', '@(tableName)')">@Html.DisplayNameFor(model => model.Program.FromYear) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('Program.ToYear', '@(tableName)')">@Html.DisplayNameFor(model => model.Program.ToYear) <span class="sort-arrow arrow-sortable"></span></a></th>
                            @*<th><a onmousedown="Sort('FinantialYear.Title', '@(tableName)')">@Html.DisplayNameFor(model => model.FinantialYear.Title) <span class="sort-arrow arrow-sortable"></span></a></th>*@
                            <th data-th='ویرایش/حذف'>ویرایش/حذف</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td data-th='ردیف'>
                                <input type="text" class="form-control txtbox" name="Program.Id">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.Program.Title)">
                                <input type="text" class="form-control txtbox" name="Program.Title">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.Program.FromYear)">
                                <input type="text" class="form-control txtbox" name="Program.FromYear">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.Program.ToYear)">
                                <input type="text" class="form-control txtbox" name="Program.ToYear">
                            </td>

                            @*<td data-th="@Html.DisplayNameFor(model => model.FinantialYear.Title)">
                                <input type="text" class="form-control txtbox" name="FinantialYear.Title">
                            </td>*@

                            <td data-th='ویرایش/حذف'></td>
                        </tr>
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="6">
                            </td>
                        </tr>
                    </tfoot>

                </table>
            </form>
        </div>
    </div>
</div>

<!------------- End Table ----------------------->