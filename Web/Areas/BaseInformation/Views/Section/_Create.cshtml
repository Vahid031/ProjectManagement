@model ViewModels.BaseInformation.SectionViewModel.CreateSectionViewModel

<form id="frm-Section" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    @Html.HiddenFor(model => model.Section.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.Section.Id, @id = "Id" })
    
    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.StateId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.StateId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.StateId, new SelectList(Model.States, "Id", "Title"), new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.Section.CityId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.Section.CityId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.Section.CityId, new SelectList(Model.Cities, "Id", "Title"), new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.Section.Code, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.Section.Code, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.Section.Code, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.Section.Title, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.Section.Title, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.Section.Title, new { @class = "form-control txtbox persian" })
    </div>

    <div class="clear"></div>
    <div class="form-group col-lg-4 col-md-6">
        <button type="submit" id="btnSave" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
        <button type="button" id="btnNew" class="btn btn-info btnNew"><span class="glyphicon glyphicon-file" style="float:right;"></span>جدید</button>
    </div>
</form>
