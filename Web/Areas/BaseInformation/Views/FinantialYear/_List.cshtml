@model IEnumerable<ViewModels.BaseInformation.FinantialYearViewModel.ListFinantialYearViewModel>
@{ string tableName = "FinantialYear";}

<div class="col-lg-12">
    <input type="hidden" id="sort-@(tableName)" value="@(tableName).Id descending" />

    <!------------- Start Table ----------------------->
    <div class="row">
        <div class="col-lg-12 content-grid">
            <form id="frm-tbl-@(tableName)">
                <table class="tbl-grid" id="tbl-@(tableName)">
                    <thead>
                        <tr>
                            <th style="width:80px;"><a onmousedown="Sort('FinantialYear.Id', '@(tableName)')">ردیف <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('FinantialYear.Title', '@(tableName)')">@Html.DisplayNameFor(model => model.FinantialYear.Title) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('FinantialYear.Title', '@(tableName)')">وضعیت <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th data-th='ویرایش/حذف'>ویرایش/حذف</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td data-th='ردیف'>
                                <input type="text" class="form-control txtbox" name="FinantialYear.Id">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.FinantialYear.Title)">
                                <input type="text" class="form-control txtbox" name="FinantialYear.Title">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.FinantialYear.IsActive)">
                                <select name="FinantialYear.IsActive">
                                    <option value="">نمایش همه</option>
                                    <option value="true">فعال</option>
                                    <option value="false">غیر فعال</option>
                                </select>
                            </td>

                            <td data-th='ویرایش/حذف'></td>
                        </tr>
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="4">
                            </td>
                        </tr>
                    </tfoot>

                </table>
            </form>
        </div>
    </div>
</div>

<!------------- End Table ----------------------->