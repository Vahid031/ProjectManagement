@model IEnumerable<ViewModels.ProjectDevision.ProjectSectionFinanceEvaluationViewModel.ListProjectSectionFinanceEvaluationViewModel>
@{ string tableName = "ProjectSectionFinanceEvaluation";}

<div class="col-lg-12">
    <input type="hidden" id="sort-@(tableName)" value="ProjectSectionFinanceEvaluation.Id descending" />

    <!------------- Start Table ----------------------->
    <div class="row">
        <div class="col-lg-12 content-grid">
            <form id="frm-tbl-@(tableName)">
                <table class="tbl-grid" id="tbl-@(tableName)">
                    <thead>
                        <tr>
                            <th style="width:80px;"><a onmousedown="Sort('ProjectSectionFinanceEvaluation.Id', '@(tableName)')">ردیف <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('Contractor.CompanyName', '@(tableName)')">@Html.DisplayNameFor(model => model.Contractor.CompanyName) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ProjectSectionFinanceEvaluation.ScoreEvaluation', '@(tableName)')">@Html.DisplayNameFor(model => model.ProjectSectionFinanceEvaluation.ScoreEvaluation) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ProjectSectionFinanceEvaluation.Description', '@(tableName)')">@Html.DisplayNameFor(model => model.ProjectSectionFinanceEvaluation.Description) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th data-th='ویرایش/حذف'>ویرایش/حذف</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td data-th='ردیف'>
                                <input type="text" class="form-control txtbox" name="ProjectSectionFinanceEvaluation.Id">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.Contractor.CompanyName)">
                                <input type="text" class="form-control txtbox" name="Contractor.CompanyName">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProjectSectionFinanceEvaluation.ScoreEvaluation)">
                                <input type="text" class="form-control txtbox" name="ProjectSectionFinanceEvaluation.ScoreEvaluation">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProjectSectionFinanceEvaluation.Description)">
                                <input type="text" class="form-control txtbox" name="ProjectSectionFinanceEvaluation.Description">
                            </td>

                            <td data-th='ویرایش/حذف'></td>
                        </tr>
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="5">
                            </td>
                        </tr>
                    </tfoot>

                </table>
            </form>
        </div>
    </div>
</div>

<!------------- End Table ----------------------->