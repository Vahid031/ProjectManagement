@model IEnumerable<ViewModels.ProjectDevision.ProjectSectionOperationViewModel.ListProjectSectionOperationViewModel>
@{ string tableName = "ProjectSectionOperation";}

<div class="col-lg-12">
    <input type="hidden" id="sort-@(tableName)" value="Id descending" />

    <!------------- Start Table ----------------------->
    <div class="row">
        <div class="col-lg-12 content-grid">
            <form id="frm-tbl-@(tableName)" style="overflow:auto;">
                <table class="tbl-grid" id="tbl-@(tableName)" style="min-width: 1700px;">
                    <thead>
                        <tr>
                            <th style="display: none">شناسه</th>
                            <th style="width:80px;"><a onmousedown="Sort('Id', '@(tableName)')">ردیف <span class="sort-arrow arrow-sortable"></span></a></th>
