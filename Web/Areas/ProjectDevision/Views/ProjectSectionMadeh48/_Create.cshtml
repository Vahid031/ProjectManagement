@model ViewModels.ProjectDevision.ProjectSectionMadeh48ViewModel.CreateProjectSectionMadeh48ViewModel

<form id="frm-ProjectSectionMadeh48" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    @Html.HiddenFor(model => model.ProjectSectionMadeh48.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.ProjectSectionMadeh48.Id, @id = "ProjectSectionMadeh48Id" })
    @Html.HiddenFor(model => model.Files, new { @id = "images-ProjectSectionMadeh48" })

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionMadeh48.LetterNumber, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionMadeh48.LetterNumber, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionMadeh48.LetterNumber, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionMadeh48.LetterDate, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionMadeh48.LetterDate, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionMadeh48.LetterDate, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionMadeh48.ConfirmPrice, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionMadeh48.ConfirmPrice, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionMadeh48.ConfirmPrice, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6" style="text-align:center">
        <br />
        <button type="button" id="btnShowProjectSectionMadeh48Files" class="btn btn-warning btn-uploader"><span class="glyphicon glyphicon-ok" style="float:right;"></span>افزودن فایل های پیوستی پروژه</button>
    </div>

    <div class="clear"></div>
    <div class="form-group col-lg-4 col-md-6">
        <button type="submit" id="btnSaveProjectSectionMadeh48" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
    </div>
</form>
