@model ViewModels.ProjectDevision.ProjectSectionViewModel.CreateProjectSectionViewModel

<form id="frm-ProjectSection" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    @Html.HiddenFor(model => model.ProjectSection.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.ProjectSection.Id, @id = "ProjectSectionId" })
    @Html.HiddenFor(model => model.ProjectSection.ProjectSectionAssignmentStateId)
    @Html.HiddenFor(model => model.ProjectSection.ProjectSectionOperationStateId)

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSection.Title, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSection.Title, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSection.Title, new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSection.AssignmentTypeId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSection.AssignmentTypeId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.ProjectSection.AssignmentTypeId, new SelectList(Model.AssignmentTypes, "Id", "Title"), new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @*@Html.LabelFor(model => model.ProjectSection.ForecastStartDate, new { @class = "label-txt" })*@
        <label class="label-txt">تاریخ شروع</label>
        @Html.ValidationMessageFor(model => model.ProjectSection.ForecastStartDate, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSection.ForecastStartDate, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @*@Html.LabelFor(model => model.ProjectSection.ForecastEndDate, new { @class = "label-txt" })*@
        <label class="label-txt">پیش بینی تاریخ خاتمه</label>
        @Html.ValidationMessageFor(model => model.ProjectSection.ForecastEndDate, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSection.ForecastEndDate, new { @class = "form-control txtbox" })
    </div>


    <div class="clear"></div>
    <div class="form-group col-lg-4 col-md-6">
        <button type="submit" id="btnSaveProjectSection" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
        <button type="button" id="btnNewProjectSection" class="btn btn-info btnNew"><span class="glyphicon glyphicon-file" style="float:right;"></span>جدید</button>
    </div>
</form>
