@model ViewModels.ProjectDevision.ProjectSectionSupervisorVisitViewModel.CreateProjectSectionSupervisorVisitViewModel

<form id="frm-ProjectSectionSupervisorVisit" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    @Html.HiddenFor(model => model.ProjectSectionSupervisorVisit.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.ProjectSectionSupervisorVisit.Id, @id = "ProjectSectionSupervisorVisitId" })
    @Html.HiddenFor(model => model.Files, new { @id = "images-ProjectSectionSupervisorVisit" })


    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionSupervisorVisit.ProjectSectionMemberId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionSupervisorVisit.ProjectSectionMemberId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.ProjectSectionSupervisorVisit.ProjectSectionMemberId, new SelectList(Model.Members, "Id", "Title"), new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionSupervisorVisit.VisitDate, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionSupervisorVisit.VisitDate, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionSupervisorVisit.VisitDate, new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionSupervisorVisit.ProjectSectionOperationTitleId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionSupervisorVisit.ProjectSectionOperationTitleId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.ProjectSectionSupervisorVisit.ProjectSectionOperationTitleId, new SelectList(Model.ProjectSectionOperationTitles, "Id", "Title"), new { @class = "form-control txtbox", data_val = "false", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionSupervisorVisit.DevelopmentPercent, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionSupervisorVisit.DevelopmentPercent, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionSupervisorVisit.DevelopmentPercent, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionSupervisorVisit.Agendum, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionSupervisorVisit.Agendum, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionSupervisorVisit.Agendum, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionSupervisorVisit.Description, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionSupervisorVisit.Description, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionSupervisorVisit.Description, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6" style="text-align:center">
        <br />
        <button type="button" id="btnShowProjectSectionSupervisorVisitFiles" class="btn btn-warning btn-uploader"><span class="glyphicon glyphicon-ok" style="float:right;"></span>افزودن فایل های پیوستی پروژه</button>
    </div>


    <div class="clear"></div>
    <div class="form-group col-lg-4 col-md-6">
        <button type="submit" id="btnSaveProjectSectionSupervisorVisit" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
        <button type="button" id="btnNewProjectSectionSupervisorVisit" class="btn btn-info btnNew"><span class="glyphicon glyphicon-file" style="float:right;"></span>جدید</button>
    </div>
</form>
