@model ViewModels.ProjectDevision.ProjectSectionFinalParticipantViewModel.CreateProjectSectionFinalParticipantViewModel

<form id="frm-ProjectSectionFinalParticipant" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    @Html.HiddenFor(model => model.ProjectSectionFinalParticipant.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.ProjectSectionFinalParticipant.Id, @id = "ProjectSectionFinalParticipantId" })
    @Html.HiddenFor(model => model.Files, new { @id = "images-ProjectSectionFinalParticipant" })

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionFinalParticipant.ContractorId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionFinalParticipant.ContractorId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.ProjectSectionFinalParticipant.ContractorId, new SelectList(Model.Contractors, "Id", "CompanyName"), new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionFinalParticipant.SuggestPrice, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionFinalParticipant.SuggestPrice, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionFinalParticipant.SuggestPrice, new { @class = "form-control txtbox numeric input-price" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionFinalParticipant.WarrantyDate, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionFinalParticipant.WarrantyDate, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionFinalParticipant.WarrantyDate, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionFinalParticipant.WarrantyNumber, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionFinalParticipant.WarrantyNumber, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionFinalParticipant.WarrantyNumber, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6" style="text-align:center">
        <br />
        <button type="button" id="btnShowProjectSectionFinalParticipantFiles" class="btn btn-warning btn-uploader"><span class="glyphicon glyphicon-ok" style="float:right;"></span>افزودن فایل های پیوستی پروژه</button>
    </div>


    <div class="clear"></div>
    <div class="form-group col-lg-4 col-md-6">
        <button type="submit" id="btnSaveProjectSectionFinalParticipant" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
        <button type="button" id="btnNewProjectSectionFinalParticipant" class="btn btn-info btnNew"><span class="glyphicon glyphicon-file" style="float:right;"></span>جدید</button>
    </div>
</form>
