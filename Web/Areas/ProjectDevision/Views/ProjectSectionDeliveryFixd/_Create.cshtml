@model ViewModels.ProjectDevision.ProjectSectionDeliveryFixdViewModel.CreateProjectSectionDeliveryFixdViewModel

<form id="frm-ProjectSectionDeliveryFixd" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    @Html.HiddenFor(model => model.ProjectSectionDeliveryFixd.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.ProjectSectionDeliveryFixd.Id, @id = "ProjectSectionDeliveryFixdId" })
    @Html.HiddenFor(model => model.Files, new { @id = "images-ProjectSectionDeliveryFixd" })


    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionDeliveryFixd.RequestNumber, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionDeliveryFixd.RequestNumber, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionDeliveryFixd.RequestNumber, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionDeliveryFixd.RequestDate, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionDeliveryFixd.RequestDate, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionDeliveryFixd.RequestDate, new { @class = "form-control txtbox pointer", @readonly = "readonly" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionDeliveryFixd.ConveneNumber, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionDeliveryFixd.ConveneNumber, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionDeliveryFixd.ConveneNumber, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionDeliveryFixd.ConveneDate, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionDeliveryFixd.ConveneDate, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionDeliveryFixd.ConveneDate, new { @class = "form-control txtbox pointer", @readonly = "readonly", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionDeliveryFixd.MeetingDate, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionDeliveryFixd.MeetingDate, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionDeliveryFixd.MeetingDate, new { @class = "form-control txtbox pointer", @readonly = "readonly" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionDeliveryFixd.DefectId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionDeliveryFixd.DefectId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.ProjectSectionDeliveryFixd.DefectId, new SelectList(Model.Defects, "Id", "Title"), new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="clear"></div>

    <div class="form-group col-lg-12">
        @Html.LabelFor(model => model.ProjectSectionDeliveryFixd.DefectDetails, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionDeliveryFixd.DefectDetails, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionDeliveryFixd.DefectDetails, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionDeliveryFixd.CommisionOpinionId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionDeliveryFixd.CommisionOpinionId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.ProjectSectionDeliveryFixd.CommisionOpinionId, new SelectList(Model.Opinions, "Id", "Title"), new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="clear"></div>

    <div class="form-group col-lg-12">
        @Html.LabelFor(model => model.ProjectSectionDeliveryFixd.Description, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionDeliveryFixd.Description, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionDeliveryFixd.Description, new { @class = "form-control txtbox" })
    </div>



    <div class="form-group col-lg-4 col-md-6" style="text-align:center">
        <br />
        <button type="button" id="btnShowProjectSectionDeliveryFixdFiles" class="btn btn-warning btn-uploader"><span class="glyphicon glyphicon-ok" style="float:right;"></span>افزودن فایل های پیوستی پروژه</button>
    </div>


    <div class="clear"></div>
    <div class="form-group col-lg-4 col-md-6">
        <button type="submit" id="btnSaveProjectSectionDeliveryFixd" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
        <button type="button" id="btnNewProjectSectionDeliveryFixd" class="btn btn-info btnNew"><span class="glyphicon glyphicon-file" style="float:right;"></span>جدید</button>
    </div>
</form>
