@model IEnumerable<ViewModels.ProjectDevision.ProjectSectionWinnerViewModel.ListProjectSectionWinnerViewModel>
@{ string tableName = "ProjectSectionWinner";}

<div class="col-lg-12">
    <input type="hidden" id="sort-@(tableName)" value="ProjectSectionWinner.Id descending" />

    <!------------- Start Table ----------------------->
    <div class="row">
        <div class="col-lg-12 content-grid">
            <form id="frm-tbl-@(tableName)">
                <table class="tbl-grid" id="tbl-@(tableName)">
                    <thead>
                        <tr>
                            <th style="width:80px;"><a onmousedown="Sort('ProjectSectionWinner.Id', '@(tableName)')">ردیف <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('Contractor.CompanyName', '@(tableName)')">@Html.DisplayNameFor(model => model.Contractor.CompanyName) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('Rank.Title', '@(tableName)')">@Html.DisplayNameFor(model => model.Rank.Title) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th data-th='ویرایش/حذف'>ویرایش/حذف</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td data-th='ردیف'>
                                <input type="text" class="form-control txtbox" name="ProjectSectionWinner.Id">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.Contractor.CompanyName)">
                                <input type="text" class="form-control txtbox" name="Contractor.CompanyName">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.Rank.Title)">
                                <input type="text" class="form-control txtbox" name="Rank.Title">
                            </td>

                            <td data-th='ویرایش/حذف'></td>
                        </tr>
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="4">
                            </td>
                        </tr>
                    </tfoot>

                </table>
            </form>
        </div>
    </div>
</div>

<!------------- End Table ----------------------->