@model IEnumerable<ViewModels.ProjectDevision.ProjectSectionDraftViewModel.ListProjectSectionDraftListViewModel>
@{ string tableName = "ProjectSectionDraftList";}

<br />

<div class="col-lg-12">
    <input type="hidden" id="sort-ProjectSectionDraftList" value="Id descending" />

    <!------------- Start Table ----------------------->
    <div class="row">
        <div class="col-lg-12 content-grid">
            <form id="frm-tbl-@(tableName)">
                <table class="tbl-grid" id="tbl-@(tableName)">
                    <thead>
                        <tr>
                            <th style="width:80px;"><a onmousedown="Sort('Id', '@(tableName)')">ردیف <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('StatementNumberTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.StatementNumberTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ConfirmPrice', '@(tableName)')">@Html.DisplayNameFor(model => model.ConfirmPrice) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('PriceStatement', '@(tableName)')">@Html.DisplayNameFor(model => model.PriceStatement) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('AccountBalance', '@(tableName)')">@Html.DisplayNameFor(model => model.AccountBalance) <span class="sort-arrow arrow-sortable"></span></a></th>                           
                            <th data-th='عملیات'>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td data-th='ردیف'>
                                <input type="text" class="form-control txtbox" name="Id">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.StatementNumberTitle)">
                                <input type="text" class="form-control txtbox" name="StatementNumberTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ConfirmPrice)">
                                <input type="text" class="form-control txtbox" name="ConfirmPrice">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.PriceStatement)">
                                <input type="text" class="form-control txtbox" name="PriceStatement">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.AccountBalance)">
                                <input type="text" class="form-control txtbox" name="AccountBalance">
                            </td>

                            <td data-th='عملیات'></td>
                        </tr>
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="6">
                            </td>
                        </tr>
                    </tfoot>

                </table>
            </form>
        </div>
    </div>
</div>

<!------------- End Table ----------------------->