@model IEnumerable<ViewModels.ProjectDevision.ProjectSectionOpenDateViewModel.ListProjectSectionOpenDateViewModel>
@{ string tableName = "ProjectSectionOpenDate";}

<div class="col-lg-12">
    <input type="hidden" id="sort-@(tableName)" value="ProjectSectionOpenDate.Id descending" />

    <!------------- Start Table ----------------------->
    <div class="row">
        <div class="col-lg-12 content-grid">
            <form id="frm-tbl-@(tableName)">
                <table class="tbl-grid" id="tbl-@(tableName)">
                    <thead>
                        <tr>
                            <th style="width:80px;"><a onmousedown="Sort('ProjectSectionOpenDate.Id', '@(tableName)')">ردیف <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ProjectSectionOpenDate.OpenDate', '@(tableName)')">@Html.DisplayNameFor(model => model.ProjectSectionOpenDate.OpenDate) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ProjectSectionOpenDate.MessageContent', '@(tableName)')">@Html.DisplayNameFor(model => model.ProjectSectionOpenDate.MessageContent) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th data-th='ویرایش/حذف'>ویرایش/حذف</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td data-th='ردیف'>
                                <input type="text" class="form-control txtbox" name="ProjectSectionOpenDate.Id">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProjectSectionOpenDate.OpenDate)">
                                <input type="text" class="form-control txtbox" name="ProjectSectionOpenDate.OpenDate">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProjectSectionOpenDate.MessageContent)">
                                <input type="text" class="form-control txtbox" name="ProjectSectionOpenDate.MessageContent">
                            </td>

                            <td data-th='ویرایش/حذف'></td>
                        </tr>
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="4">
                            </td>
                        </tr>
                    </tfoot>

                </table>
            </form>
        </div>
    </div>
</div>

<!------------- End Table ----------------------->