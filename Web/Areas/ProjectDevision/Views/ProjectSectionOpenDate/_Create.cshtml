@model ViewModels.ProjectDevision.ProjectSectionOpenDateViewModel.CreateProjectSectionOpenDateViewModel

<form id="frm-ProjectSectionOpenDate" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    @Html.HiddenFor(model => model.ProjectSectionOpenDate.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.ProjectSectionOpenDate.Id, @id = "ProjectSectionOpenDateId" })

  

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionOpenDate.OpenDate, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionOpenDate.OpenDate, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionOpenDate.OpenDate, new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>


    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionOpenDate.IsSend, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionOpenDate.IsSend, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.ProjectSectionOpenDate.IsSend, new List<SelectListItem> {
            new SelectListItem{ Text="ارسال شود", Value="true"},
            new SelectListItem{ Text="ارسال نشود", Value="false"}
        }, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionOpenDate.MessageContent, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionOpenDate.MessageContent, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionOpenDate.MessageContent, new { @class = "form-control txtbox" })
    </div>

    <div class="clear"></div>
    <div class="form-group col-lg-4 col-md-6">
        <button type="submit" id="btnSaveProjectSectionOpenDate" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
        <button type="button" id="btnNewProjectSectionOpenDate" class="btn btn-info btnNew"><span class="glyphicon glyphicon-file" style="float:right;"></span>جدید</button>
    </div>
</form>
