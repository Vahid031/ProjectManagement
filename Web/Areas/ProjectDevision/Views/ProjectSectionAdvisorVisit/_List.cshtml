                            <td data-th="@Html.DisplayNameFor(model => model.ProjectSectionAdvisorVisit.VisitDate)">
                                <input type="text" class="form-control txtbox" name="ProjectSectionAdvisorVisit.VisitDate">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProjectSectionAdvisorVisit.Agendum)">
