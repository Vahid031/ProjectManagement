@model ViewModels.ProjectDevision.ProjectSectionDraftViewModel.CreateProjectSectionDraftViewModel

<form id="frm-ProjectSectionDraft" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    @Html.HiddenFor(model => model.ProjectSectionDraft.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.ProjectSectionDraft.Id, @id = "ProjectSectionDraftId" })
    @Html.HiddenFor(model => model.ProjectSectionDraft.ProjectSectionStatementConfirmId)
    @Html.HiddenFor(model => model.Files, new { @id = "images-ProjectSectionDraft" })

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionDraft.DraftNumber, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionDraft.DraftNumber, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionDraft.DraftNumber, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6" id="divTempDraftPrice">
        @Html.LabelFor(model => model.ProjectSectionDraft.TempDraftPrice, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionDraft.TempDraftPrice, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionDraft.TempDraftPrice, new { @class = "form-control txtbox numeric input-price" })
    </div>

    <div class="form-group col-lg-4 col-md-6" id="divDraftPrice">
        @Html.LabelFor(model => model.ProjectSectionDraft.DraftPrice, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionDraft.DraftPrice, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionDraft.DraftPrice, new { @class = "form-control txtbox numeric input-price", @readonly = "readonly" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionDraft.DraftDate_, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionDraft.DraftDate_, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionDraft.DraftDate_, new { @class = "form-control txtbox", @readonly="readonly", style="cursor:pointer;", data_val = "true", data_val_required = "الزامی است"})
    </div>


    <div class="form-group col-lg-4 col-md-6">
        <br />
        <button type="button" id="btnShowProjectSectionDraftFiles" class="btn btn-warning btn-uploader"><span class="glyphicon glyphicon-ok" style="float:right;"></span>افزودن فایل های پیوستی پروژه</button>
    </div>


    <div class="clear"></div>
    <div class="form-group col-lg-8">
        <button type="submit" id="btnSaveProjectSectionDraft" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
        <button type="button" id="btnNewProjectSectionDraft" class="btn btn-info btnNew"><span class="glyphicon glyphicon-file" style="float:right;"></span>جدید</button>
    </div>
</form>


<script>

    $(function () {
        DatePic('#ProjectSectionDraft_DraftDate_');
    });

    SepratePrice('#ProjectSectionDraft_DraftPrice');

</script>