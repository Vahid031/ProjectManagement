@model ViewModels.ProjectDevision.ProjectSectionPaidPriceViewModel.CalculateProjectSectionPaidPriceViewModel

<div class="clear"></div>
<br />
<!-- ----------------- Start  ------------------------ -->
<div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="panel-heading"> <h3 class="panel-title">محاسبات مبالغ قرارداد و حواله</h3> </div>
        <div class="panel-body">

            <div class="form-group col-lg-4 col-md-6">
                <label class="label-txt">مبلغ قرارداد(با احتساب متمم قرارداد)</label>
                <input type="text" id="sumProduct" value="@Model.ContractPrice" class="form-control txtbox" readonly />
            </div>

            <div class="form-group col-lg-4 col-md-6">
                <label class="label-txt">جمع مبلغ حواله</label>
                <input type="text" id="sumServices" value="@Model.TotalDraftPrice" class="form-control txtbox" readonly />
            </div>

            <div class="form-group col-lg-4 col-md-6">
                <label class="label-txt">جمع مبلغ پرداختی</label>
                <input type="text" id="sumTotal" value="@Model.TotalPadePrice" class="form-control txtbox" readonly />
            </div>

            <div class="form-group col-lg-4 col-md-6">
                <label class="label-txt">جریمه ماده 46</label>
                <input type="text" id="sumTotal" value="@Model.Penalty46Price" class="form-control txtbox" readonly />
            </div>

            <div class="form-group col-lg-4 col-md-6">
                <label class="label-txt">مبلغ مانده از حواله</label>
                <input type="text" id="sumTotal" value="@Model.RemainingDraftPrice" class="form-control txtbox" readonly />
            </div>

            <div class="form-group col-lg-4 col-md-6">
                <label class="label-txt">مبلغ مانده از کل قرارداد</label>
                <input type="text" id="sumTotal" value="@Model.RemainingTotalContractPrice" class="form-control txtbox" readonly />
            </div>
        </div>
    </div>
</div>
<!-- ----------------- End  ------------------------ -->

