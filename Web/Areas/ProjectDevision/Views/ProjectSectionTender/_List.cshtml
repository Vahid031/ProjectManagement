@model IEnumerable<ViewModels.ProjectDevision.ProjectSectionTenderViewModel.ListProjectSectionTenderViewModel>
@{ string tableName = "ProjectSectionTender";}

<div class="col-lg-12">
    <input type="hidden" id="sort-@(tableName)" value="ProjectSectionTender.Id descending" />

    <!------------- Start Table ----------------------->
    <div class="row">
        <div class="col-lg-12 content-grid">
            <form id="frm-tbl-@(tableName)">
                <table class="tbl-grid" id="tbl-@(tableName)">
                    <thead>
                        <tr>
                            <th style="width:80px;"><a onmousedown="Sort('ProjectSectionTender.Id', '@(tableName)')">ردیف <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ProjectSectionTender.NewspaperTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.ProjectSectionTender.NewspaperTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ProjectSectionTender.NewspaperNumber', '@(tableName)')">@Html.DisplayNameFor(model => model.ProjectSectionTender.NewspaperNumber) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ProjectSectionTender.DiffusionDate', '@(tableName)')">@Html.DisplayNameFor(model => model.ProjectSectionTender.DiffusionDate) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th data-th='ویرایش/حذف'>ویرایش/حذف</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td data-th='ردیف'>
                                <input type="text" class="form-control txtbox" name="ProjectSectionTender.Id">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProjectSectionTender.NewspaperTitle)">
                                <input type="text" class="form-control txtbox" name="ProjectSectionTender.NewspaperTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProjectSectionTender.NewspaperNumber)">
                                <input type="text" class="form-control txtbox" name="ProjectSectionTender.NewspaperNumber">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProjectSectionTender.DiffusionDate)">
                                <input type="text" class="form-control txtbox" name="ProjectSectionTender.DiffusionDate">
                            </td>

                            <td data-th='ویرایش/حذف'></td>
                        </tr>
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="5">
                            </td>
                        </tr>
                    </tfoot>

                </table>
            </form>
        </div>
    </div>
</div>

<!------------- End Table ----------------------->