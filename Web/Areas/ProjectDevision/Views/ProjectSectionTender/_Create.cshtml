@model ViewModels.ProjectDevision.ProjectSectionTenderViewModel.CreateProjectSectionTenderViewModel

<form id="frm-ProjectSectionTender" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    @Html.HiddenFor(model => model.ProjectSectionTender.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.ProjectSectionTender.Id, @id = "ProjectSectionTenderId" })
    @Html.HiddenFor(model => model.Files, new { @id = "images-ProjectSectionTender" })

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionTender.NewspaperTitle, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionTender.NewspaperTitle, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionTender.NewspaperTitle, new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionTender.NewspaperNumber, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionTender.NewspaperNumber, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionTender.NewspaperNumber, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionTender.DiffusionDate, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionTender.DiffusionDate, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionTender.DiffusionDate, new { @class = "form-control txtbox", data_val = "true", data_val_required = "الزامی است" })
    </div>

    <div class="form-group col-lg-4 col-md-6" style="text-align:center">
        <br />
        <button type="button" id="btnShowProjectSectionTenderFiles" class="btn btn-warning btn-uploader"><span class="glyphicon glyphicon-ok" style="float:right;"></span>افزودن فایل های پیوستی پروژه</button>
    </div>


    <div class="clear"></div>
    <div class="form-group col-lg-4 col-md-6">
        <button type="submit" id="btnSaveProjectSectionTender" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
        <button type="button" id="btnNewProjectSectionTender" class="btn btn-info btnNew"><span class="glyphicon glyphicon-file" style="float:right;"></span>جدید</button>
    </div>
</form>
