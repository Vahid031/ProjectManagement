@model ViewModels.ProjectDevision.ProjectSectionProductViewModel.CreateProjectSectionProductViewModel

<form id="frm-ProjectSectionProduct" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    @Html.HiddenFor(model => model.ProjectSectionProduct.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.ProjectSectionProduct.Id, @id = "Id" })
    @Html.HiddenFor(model => model.ProjectSectionProduct.ProjectSectionId)
    @Html.HiddenFor(model => model.Files, new { @id = "images-ProjectSectionProduct" })

    <div class="form-group col-lg-6">
        @Html.LabelFor(model => model.ProjectSectionProduct.ServiceProductId, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionProduct.ServiceProductId, String.Empty, new { @class = "label-validation" })
        @Html.DropDownListFor(model => model.ProjectSectionProduct.ServiceProductId, new SelectList(Model.ServiceProducts, "Id", "Title"), new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-6">
        @Html.LabelFor(model => model.ProjectSectionProduct.ServiceProductContent, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionProduct.ServiceProductContent, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionProduct.ServiceProductContent, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-6">
        @Html.LabelFor(model => model.ProjectSectionProduct.UsedAmount, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionProduct.UsedAmount, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionProduct.UsedAmount, new { @class = "form-control txtbox numeric" })
    </div>

    <div class="form-group col-lg-6">
        @Html.LabelFor(model => model.ProjectSectionProduct.EstimatesPrice, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionProduct.EstimatesPrice, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionProduct.EstimatesPrice, new { @class = "form-control txtbox numeric" })
    </div>

    <div class="form-group col-lg-4 col-md-6" style="text-align:center">
        <br />
        <button type="button" id="btnShowProjectSectionProductFiles" class="btn btn-warning btn-uploader" style="min-width: 200px;"><span class="glyphicon glyphicon-ok" style="float: right;"></span>افزودن فایل های پیوستی</button>
    </div>

    <div class="clear"></div>
    <div class="form-group col-lg-6">
        <button type="submit" id="btnSave" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
        <button type="button" id="btnNew" class="btn btn-info btnNew"><span class="glyphicon glyphicon-file" style="float:right;"></span>جدید</button>
    </div>
</form>


<div class="clear"></div>
<br />
<!-- ----------------- Start  ------------------------ -->
<div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="panel-heading"> <h3 class="panel-title">جمع برآورد مبالغ</h3> </div>
        <div class="panel-body">

            <div class="form-group col-lg-4 col-md-6">
                <label class="label-txt">جمع برآورد مبلغ کالا</label>
                <input type="text" id="sumProduct" value="@ViewBag.Product" class="form-control txtbox" readonly />
            </div>

            <div class="form-group col-lg-4 col-md-6">
                <label class="label-txt">جمع برآورد مبلغ خدمات</label>
                <input type="text" id="sumServices" value="@ViewBag.Services" class="form-control txtbox" readonly />
            </div>

            <div class="form-group col-lg-4 col-md-6">
                <label class="label-txt">جمع برآورد کل مبالغ</label>
                <input type="text" id="sumTotal" value="@ViewBag.Total" class="form-control txtbox" readonly />
            </div>

        </div>
    </div>
</div>
<!-- ----------------- End  ------------------------ -->

