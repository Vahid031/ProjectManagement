@model ViewModels.ProjectDevision.ProjectSectionCeremonialViewModel.CreateProjectSectionCeremonialViewModel

<form id="frm-ProjectSectionCeremonial" class="operationform" method="post">
    @{
        if (ViewBag.error != null)
        {
            <div class="col-lg-12">
                <div id="ErrorAlert" class="alert alert-danger" role="alert">
                    <button type="button" class="close" id="AlertClose"><span aria-hidden="true">&times;</span></button>
                    <span>@ViewBag.error</span>
                </div>
            </div>

            <script>
                $('#ErrorAlert').show().delay(4000).slideUp(300);
            </script>
        }
    }
    @Html.HiddenFor(model => model.ProjectSectionCeremonial.Id, new { Value = (@ViewBag.Id != null) ? @ViewBag.Id : Model.ProjectSectionCeremonial.Id, @id = "ProjectSectionCeremonialId" })
    @Html.HiddenFor(model => model.Files, new { @id = "images-ProjectSectionCeremonial" })

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionCeremonial.JustificationNumber, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionCeremonial.JustificationNumber, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionCeremonial.JustificationNumber, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6">
        @Html.LabelFor(model => model.ProjectSectionCeremonial.JustificationDate, new { @class = "label-txt" })
        @Html.ValidationMessageFor(model => model.ProjectSectionCeremonial.JustificationDate, String.Empty, new { @class = "label-validation" })
        @Html.TextBoxFor(model => model.ProjectSectionCeremonial.JustificationDate, new { @class = "form-control txtbox" })
    </div>

    <div class="form-group col-lg-4 col-md-6" style="text-align:center">
        <br />
        <button type="button" id="btnShowProjectSectionCeremonialFiles" class="btn btn-warning btn-uploader"><span class="glyphicon glyphicon-ok" style="float:right;"></span>افزودن فایل های پیوستی پروژه</button>
    </div>


    <div class="clear"></div>
    <div class="form-group col-lg-4 col-md-6">
        <button type="submit" id="btnSaveProjectSectionCeremonial" class="btn btn-success"><span class="glyphicon glyphicon-ok" style="float:right;"></span>ذخیره</button>
        <button type="button" id="btnNewProjectSectionCeremonial" class="btn btn-info btnNew"><span class="glyphicon glyphicon-file" style="float:right;"></span>جدید</button>
    </div>
</form>
