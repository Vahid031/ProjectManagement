@model IEnumerable<ViewModels.ProjectDevision.ProjectSectionAssignmentViewModel.ListProjectSectionAssignmentViewModel>
@{ string tableName = "ProjectSectionAssignment";}

<div class="col-lg-12">
    <input type="hidden" id="sort-@(tableName)" value="Id descending" />

    <!------------- Start Table ----------------------->

        <div class="col-lg-12 content-grid">
            <form id="frm-tbl-@(tableName)">
                <table class="tbl-grid" id="tbl-@(tableName)" style="min-width:1200px;">
                    <thead>
                        <tr>
                            <th style="display: none">شناسه</th>
                            <th style="width:80px;"><a onmousedown="Sort('Id', '@(tableName)')">ردیف <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('FileCode', '@(tableName)')">@Html.DisplayNameFor(model => model.FileCode) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ProjectTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.ProjectTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ProjectSectionTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.ProjectSectionTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('StateTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.StateTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('CityTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.CityTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('AssignmentTypeTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.AssignmentTypeTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th style="display:none"><a onmousedown="Sort('ProjectSectionAssignmentStateId', '@(tableName)')">@Html.DisplayNameFor(model => model.ProjectSectionAssignmentStateId) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th><a onmousedown="Sort('ProjectSectionAssignmentStateTitle', '@(tableName)')">@Html.DisplayNameFor(model => model.ProjectSectionAssignmentStateTitle) <span class="sort-arrow arrow-sortable"></span></a></th>
                            <th style="display:none"><a onmousedown="Sort('Color', '@(tableName)')">@Html.DisplayNameFor(model => model.Color) <span class="sort-arrow arrow-sortable"></span></a></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="display:none">
                                <input type="text" class="form-control txtbox" name="Id">
                            </td>

                            <td data-th='ردیف'>
                                <input type="text" class="form-control txtbox" name="Id">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.FileCode)">
                                <input type="text" class="form-control txtbox" name="FileCode">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProjectTitle)">
                                <input type="text" class="form-control txtbox" name="ProjectTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProjectSectionTitle)">
                                <input type="text" class="form-control txtbox" name="ProjectSectionTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.StateTitle)">
                                <input type="text" class="form-control txtbox" name="StateTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.CityTitle)">
                                <input type="text" class="form-control txtbox" name="CityTitle">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.AssignmentTypeTitle)">
                                <input type="text" class="form-control txtbox" name="AssignmentTypeTitle">
                            </td>

                            <td style="display:none" data-th="@Html.DisplayNameFor(model => model.ProjectSectionAssignmentStateId)">
                                <input type="text" class="form-control txtbox" name="ProjectSectionAssignmentStateId">
                            </td>

                            <td data-th="@Html.DisplayNameFor(model => model.ProjectSectionAssignmentStateTitle)">
                                <input type="text" class="form-control txtbox" name="ProjectSectionAssignmentStateTitle">
                            </td>

                            <td style="display:none" data-th="@Html.DisplayNameFor(model => model.Color)">
                                <input type="text" class="form-control txtbox" name="Color">
                            </td>
                        </tr>
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="8">
                            </td>
                        </tr>
                    </tfoot>

                </table>
            </form>
        </div>
 
</div>

<!------------- End Table ----------------------->